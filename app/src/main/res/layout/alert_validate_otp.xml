<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/broad_line_ash_bg"
    android:padding="24dp">

    <EditText
        android:id="@+id/ca_et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/alert_et_bg"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Enter the 4-digit OTP.."
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"/>
    <Button
        android:id="@+id/ca_bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_below="@+id/ca_et_otp"
        android:background="@drawable/bt_solid_bg"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/ca_bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ca_et_otp"
        android:background="@drawable/bt_solid_bg"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:text="@string/cancel"
        android:textAllCaps="false"/>

</RelativeLayout>