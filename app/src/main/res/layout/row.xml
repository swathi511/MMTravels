<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rw_ll_layout"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/row_bg"
    android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="right"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duty_status"
                android:textSize="14sp"
                android:textColor="@color/colorAsh"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="gone"/>
            <TextView android:id="@+id/rw_tv_duty_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/neww"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:gravity="right"
                android:background="@color/colorAsh"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dsno"
                android:textSize="15sp"
                android:textColor="@color/colorAshLight"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="gone"/>
            <TextView android:id="@+id/rw_tv_dsno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_marginRight="14dp"/>
            <TextView android:id="@+id/rw_tv_rep_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_marginRight="12dp"/>
            <TextView android:id="@+id/rw_tv_rep_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_marginRight="12dp"
                android:alpha="0.5"/>
            <TextView android:id="@+id/rw_tv_rep_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_gravity="center"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:layout_marginRight="12dp"
            android:alpha="0.5"/>
        <TextView android:id="@+id/rw_tv_gname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xxx"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="4dp"
            android:alpha="0.5"/>
        <TextView android:id="@+id/rw_tv_gmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xxx"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="center"/>

    </LinearLayout>

        <TextView android:id="@+id/rw_tv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/more"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:textStyle="bold"
            android:visibility="gone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="8dp">
    <TextView android:id="@+id/rw_tv_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bt_stroke_bg"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="12sp"
        android:layout_weight="1" />

        <TextView android:id="@+id/rw_tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_duty"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bt_stroke_bg"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:visibility="gone" />

        </LinearLayout>

    <TextView android:id="@+id/rw_offline_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_data"
        android:background="@drawable/bt_solid_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:padding="12dp"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    </LinearLayout>

